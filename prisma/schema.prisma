generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Brand {
  Cuisinart
  Kitchenaid
}

model Product {
  id          String   @id @default(cuid())
  gearId      String   @unique
  title       String
  description String
  brand       Brand
  category    String
  price       Decimal
  images      String[]
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
